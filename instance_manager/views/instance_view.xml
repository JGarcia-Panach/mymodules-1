<!-- ##### Tree View ##### -->
<record id="instance_manager.view_tree_instance"   model="ir.ui.view">
    <field name="name">Instance Tree</field>
    <field name="model">instance.manager.instance</field>
    <field name="arch" type="xml">
        <tree editable="bottom" colors="gray:is_done==True" fonts="italic: state!='open'" delete="false">
            <field name="client"/>
            <field name="ip"/>
            <field name="version"/>
            <field name="domains"/>
            <field name="machine"/>
            <field name="state"/>
            <field name="description"/>
            <field name="backEndUser"/>
            <field name="backEndPass"/>
            <field name="postgreUser"/>
            <field name="postgrePass"/>
            <field name="sshUser"/>
            <field name="sshPass"/>

        </tree>
    </field>
</record>
